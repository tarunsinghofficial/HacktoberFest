-<TableRow android:layout_height="match_parent" android:layout_width="match_parent">

<Button android:textSize="20sp" android:id="@+id/buttonClear" android:layout_weight="1" android:text="CLEAR"/>

<Button android:textSize="20sp" android:id="@+id/button0" android:layout_weight="1" android:text="0"/>

<Button android:textSize="20sp" android:id="@+id/buttonEqual" android:layout_weight="1" android:text="="/>

<Button android:textSize="20sp" android:id="@+id/buttonDiv" android:layout_weight="1" android:text="/"/>

</TableRow>

</TableLayout>
