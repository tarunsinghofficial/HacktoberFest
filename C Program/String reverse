
#include<stdio.h>
#include<string.h>
int main()
{  
   char mess[80], stress[80];
   int i,j,len;
   printf("Enter any string:");
   scanf("%s",&mess);
   j=0;
   len=strlen(mess);
   for (i=len-1;i>=0;i--)
   {
       stress[j++]=mess[i];
   }
   stress[j]='\0';
   printf ("the reversed string is =%s",stress);
   return 0;
 }
