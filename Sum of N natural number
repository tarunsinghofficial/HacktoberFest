/*
 * C program to find the sum of 'N' natural numbers
 */
#include <stdio.h>
 
void main()
{
    int i, num, sum = 0;
 
    printf("Enter an integer number \n");
    scanf ("%d", &num);
    
    /* using For Loop for first n natural numbers.
        for (i = 1; i <= num; i++)
        {
            sum = sum + i;
        }
    */
    
    // using the mathematical formulae n*(n+1)/2 .
    sum = num*(num+1)/2;
    
    printf ("Sum of first %d natural numbers = %d\n", num, sum);
}
